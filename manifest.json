{
  "manifest_version": 2,
  "name": "Video Ad Monitor",
  "version": "3.2",
  "description": "Mutes the sound, reduces video opacity, and blurs the video during non-skippable ads. Closes banners and clicks the skip now button when present.",
  "icons": {
    "48": "off.png",
    "48": "on.png"
  },
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "off"
  },
  "permissions": [
    "tabs"
  ],
  "incognito": "spanning",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["video.js"]
    }
  ]
}
